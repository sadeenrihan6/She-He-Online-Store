@{
	string? userIdCheck = Context.Request.HttpContext.Session.GetString("AdminName");
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Admin Dashboard</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-dwDZlxZtGo+1U09F4z9T/RapHe4n3pVjvSJQ0kL3K7n2V/+SlVXnKC5KHrAXl+g1P" crossorigin="anonymous">
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" href="~/Admindashboard/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="~/Admindashboard/assets/css/ready.css">
    <link rel="stylesheet" href="~/Admindashboard/assets/css/demo.css">
	<link rel="shortcut icon" href="~/img/logos&h.png">
	<link rel="shortcut icon" href="~/Images/logos&h.png">
	<link rel="shortcut icon" href="~/images/logos&h.png">
</head>
<body>
	<div class="wrapper">
		<div class="main-header">
			<div class="logo-header">
				<a asp-controller="LoginAndRegister" asp-action="Logout" class="logo">
					SHE  & HE Online Store
				</a>

				<button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-controls="sidebar" aria-expanded="lse" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<button class="topbar-toggler more"><i class="la la-ellipsis-v"></i></button>
			</div>

			<nav class="navbar navbar-header navbar-expand-lg">
				<div class="container-fluid">

					
					<ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
						<li class="nav-item dropdown hidden-caret">
							
						</li>
						<li class="nav-item dropdown hidden-caret">
							
						</li>
						<li class="nav-item dropdown">
							<a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false">
								<span>@ViewBag.Admin?.Fname @ViewBag.Admin?.Lname</span><img src=@Url.Content("~/Images/" + ViewBag.Admin?.ImagePath)
																					 asp-append-version="true" style="border-radius: 50%;"
																					 height="40px" />
							</a>
							<ul class="dropdown-menu dropdown-user">
								<li>
									<div class="user-box">
										<div class="photo">
											<img src=@Url.Content("~/Images/" + ViewBag.Admin?.ImagePath)
												 asp-append-version="true" style="border-radius: 50%;"
												 height="75px" />
										</div>
										<div class="u-text">
											<h4>@ViewBag.Admin?.Fname @ViewBag.Admin?.Lname</h4>
											<p class="text-muted">@ViewBag.AdminUser?.UserName</p>
										</div>
									</div>
								</li>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" asp-controller="Customers" asp-action="EditAdmin" asp-route-id="@ViewBag.Admin?.Id"><i class="ti-settings"></i> Account Setting</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" asp-controller="LoginAndRegister" asp-action="Logout"><i class="fa fa-power-off"></i> Logout</a>
							</ul>
							<!-- /.dropdown-user -->
						</li>
					</ul>
				</div>
			</nav>
		</div>
		<div class="sidebar">
			<div class="scrollbar-inner sidebar-wrapper">
				<ul class="nav">
					<li class="nav-item active">
						<a asp-controller="Admin" asp-action="Dashboard">
							<i class="la la-dashboard"></i>
							<p>Dashboard</p>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="Admin" asp-action="Report">
							<i class="la la-clipboard"></i>
							<p>Reports</p>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="ProductCustomers" asp-action="Index">
							<i class="la la-cart-arrow-down"></i>
							<p>Orders</p>
						</a>

					</li>
					<li class="nav-item">
							<a asp-controller="Categories" asp-action="Index">
							<i class="la la-sitemap"></i>
								<p>Categories</p>
							</a>

					</li>
					<li class="nav-item">
						<a asp-controller="Products" asp-action="Index">
							<i class="la la-cubes"></i>
							<p>Products</p>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="Customers" asp-action="Index">
							<i class="la la-group"></i>
							<p>Customers Information</p>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="Coupons" asp-action="Index">
							<i class="la la-money"></i>
							<p>Coupons</p>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="Reviews" asp-action="Index">
							<i class="la la-comments"></i>
							<p>Reviews</p>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="Testimonials" asp-action="Index">
							<i class="la la-comment"></i>
							<p>Testimonials</p>
						</a>
					</li>
				</ul>

			</div>

		</div>

		<div class="main-panel">
			<div class="content-wrapper">
						<div class="container-fluid">
				@RenderBody()
				</div>
			</div>
		</div>
		<script src="~/Admindashboard/assets/js/core/jquery.3.2.1.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
		<script src="~/Admindashboard/assets/js/core/popper.min.js"></script>
		<script src="~/Admindashboard/assets/js/core/bootstrap.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/chartist/chartist.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/chartist/plugin/chartist-plugin-tooltip.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/bootstrap-toggle/bootstrap-toggle.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/jquery-mapael/jquery.mapael.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/jquery-mapael/maps/world_countries.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/chart-circle/circles.min.js"></script>
		<script src="~/Admindashboard/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
		<script src="~/Admindashboard/assets/js/ready.min.js"></script>
		<script src="~/Admindashboard/assets/js/demo.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>


		<script>
			var ctx = document.getElementById('orderChart').getContext('2d');

			var chart = new Chart(ctx, {
				type: 'bar',
				data: {
					labels: @Html.Raw(Json.Serialize(ViewData["CityLabels"])),
					datasets: [{
						label: 'Number of Orders',
						data: @Html.Raw(Json.Serialize(ViewData["OrderCounts"])),
						backgroundColor: '#84A7A1',
						borderColor: '#84A7AF',
						borderWidth: 1
					}]
				},
				options: {
					scales: {
						y: {
							beginAtZero: true
						}
					}
				}
			});
		</script>

		<script>
			var ctx = document.getElementById('orderStatusChart').getContext('2d');

			var chart = new Chart(ctx, {
				type: 'doughnut',
				data: {
					labels: @Html.Raw(Json.Serialize(ViewData["StatusLabels"])),
					datasets: [{
						data: @Html.Raw(Json.Serialize(ViewData["OrderCountsByStatus"])),
						backgroundColor: [
							'#183D3D',
							'#5C8374',
							'#93B1A6',
							'#B2C8BA'
						],
						borderColor: [
							'#183D3D',
							'#5C8374',
							'#93B1A6',
							'#B2C8BA'
						],
						borderWidth: 1
					}]
				},
				options: {
					cutout: '50%', 
					responsive: true,
					plugins: {
						legend: {
							display: true,
							position: 'right'
						}
					}
				}
			});
		</script>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>







		@RenderSection("Scripts", required: false)
</body>
</html>
