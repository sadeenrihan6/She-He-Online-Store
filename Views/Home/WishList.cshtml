@model IEnumerable<Product>
@{
    ViewData["Title"] = "WishList";
    Layout = "~/Views/Shared/_ProjectLayout.cshtml";
}

<div class="container">

    <section class="py-5 bg-light" style="margin-top:40px;">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-lg-6">
                    <h1 class="h2 text-uppercase mb-0">Wishlist</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                            <li class="breadcrumb-item"><a class="text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active"  aria-current="page">Wishlist</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <br />

        <div class="row" >
            @{
                if (Model.Count() == 0)
                {
                        <section class="py-5 bg-light" style="text-align:center; height: 250px; margin-bottom: 30px;" >
                            <div class="container">
                            <h5 style=" padding-top: 65px">
                                  Your Wishlist is empty
                               </h5>
                            </div>
                        </section>
                 
                }
            else{
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6" style="margin: 20px 0px 20px 0px">
                    <div class="product text-center">
                        <div class="mb-3 position-relative">

                            <div class="badge text-white bg-"></div>
                                <img src=@Url.Content("~/Images/" + item.ImagePath)
                                     asp-append-version="true"
                                     height="200px" width="200px" />
                            
                            <div class="product-overlay">
                                <ul class="mb-0 list-inline">
                                            <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-outline-dark" style=" border-radius: 40px;" asp-controller="Home" asp-action="RemoveFromWishlist" asp-route-id=@item.Id><i class="fas fa-trash"></i></a></li>
                                            <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-dark" style=" border-radius: 40px;" asp-controller="Home" asp-action="ShoppingCart" asp-route-id=@item.Id>Add to cart</a></li>
                                            <li class="list-inline-item mr-0"><a class="btn btn-sm btn-outline-dark" style=" border-radius: 40px;" asp-controller="Home" asp-action="productDetails" asp-route-id=@item.Id><i class="fas fa-expand"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <h6> @item.Name</h6>
                        <p class="small text-muted">@item.Price JOD</p>
                    </div>
                </div>
            }
            }
            }
            <div class="bg-light px-4 py-3" style="margin-bottom: 40px;">
                <div class="row align-items-center text-center">
                    @if (ViewBag.ReturnUrl != null)
                    {
                        <div class="col-md-6 mb-3 mb-md-0 text-md-start"><a class="btn btn-link p-0 text-dark btn-sm" href="@ViewBag.ReturnUrl"><i class="fas fa-long-arrow-alt-left me-2"> </i>Continue browsing products</a></div>
                    }
                    else
                    {
                        <div class="col-md-6 mb-3 mb-md-0 text-md-start"><a class="btn btn-link p-0 text-dark btn-sm" asp-controller="Home" asp-action="Index"><i class="fas fa-long-arrow-alt-left me-2"> </i>Continue browsing products</a></div>

                    }


                </div>
            </div>
        </div>
        
    </div>

</div>

