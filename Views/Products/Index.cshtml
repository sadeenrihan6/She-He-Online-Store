@model IEnumerable<Project.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        tbody tr td {
            color: black;
            font-weight: 600;
            font-size: 17px !important;
        }

        thead tr th {
            font-size: 19px !important;
        }
    </style>
</head>
<br />
<br />
<br />
<hr style="height: 5px;" />
<h4>
    <a style="color:#464443;font-weight:bolder;">Products</a>
</h4>
<hr style="height: 5px;" />
<p>
    <button type="button" class="btn btn-success"><a asp-action="Create" style="color:white;font-size:20px; font-weight:bolder;">Add New Product <i class="la la-plus"></i></a></button>
</p>
<hr style="height: 5px;" />
<table class="table  table-light table-hover" id="example" style="margin: 20px 0px 20px 0px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantityinstock)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                <td>
                    <img src=@Url.Content("~/Images/" + item.ImagePath)
                         asp-append-version="true" style="border-radius: 20%;"
                         action="100px" height="100px" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantityinstock)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color:forestgreen">Edit <i class="la la-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color:darkblue">Details <i class="la la-info-circle"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color:darkred">Delete <i class="la la-trash"></i></a>

                </td>
               
        </tr>
}
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>
<!-- DataTables CSS and JS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js"></script>

<!-- Buttons extension CSS and JS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>

<!-- Buttons HTML5 export options CSS and JS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.html5.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>

<!-- Buttons printing options CSS and JS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.print.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.print.min.js"></script>

<script>
    $('#example').DataTable({
        responsive: true,
        dom: 'Bfrtip',
        buttons: ['print', 'copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5'],
        initComplete: function () {
            var btns = $('.dt-button');
            btns.addClass('btn btn-success btn-sm');
            btns.removeClass('dt-button');

        }
    });
</script>
